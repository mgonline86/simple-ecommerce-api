{
   "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "moduleResolution": "node",
      "target": "ES5",
      "allowJs": true,
      "strict": true,
      "noImplicitAny": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "declaration": true,
      "resolveJsonModule": true,
      "esModuleInterop": true
   },
   "include": [
      "./src/**/*"
   ],
   "exclude": [
      "node_modules",
      "**/*.spec.ts"
   ]
}